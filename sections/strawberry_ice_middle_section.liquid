<div class="cotton-two product-grid premium_product_section">
  <div class="container">
    {% if section.settings.title != blank %}
    <div class="collection_group_head">
      <h2 class="text-center">{{ section.settings.title }}</h2>
    </div>
    {% endif %}
    <div class="cotton-twos">
      <div class="cotton-left left_img_cols">
        {% if section.settings.second_image_1 != blank %}
        <a href="{% if section.settings.second_img_url_1 != blank %}{{ section.settings.second_img_url_1 }}{% else %}#{% endif %}">
          <img width="490" height="533"  data-src="{{ section.settings.second_image_1 | img_url: 'original' }}" class="lazyload" alt="{{ section.settings.second_image_1.alt }}">
          {% if section.settings.second_text != blank %}
          <div class="cotton_overlay_text">
            <p>{{ section.settings.second_text }}</p>
          </div>
          {% endif %}
        </a>
        {% endif %}
        {% if section.settings.second_image_2 != blank %}
        <a href="{% if section.settings.second_img_url_2 != blank %}{{ section.settings.second_img_url_2 }}{% else %}#{% endif %}">
          <img width="490" height="533" data-src="{{ section.settings.second_image_2 | img_url: 'original' }}" class="lazyload" alt="{{ section.settings.second_image_2.alt }}">
          {% if section.settings.second_text_1 != blank %}
          <div class="cotton_overlay_text">
            <p>{{ section.settings.second_text_1 }}</p>
          </div>
          {% endif %}
        </a>
        {% endif %}
      </div>
      <div class="cotton-left product-grd collection_group">
        <div class="products_cols collection_group_list">
          {% assign collection = collections[section.settings.collection_1] %}

          {% for product in collection.products limit: 6 %}
          {% if product.type == "Premium Underwear" %}
          {% for prodTag in product.tags %}
          {% if prodTag contains "pantyType-" %}
          {%- assign prodNameTitle = prodTag | replace: "pantyType-", "" -%}
          {% endif %}
          {% if prodTag contains "pantyColor-" %}
          {%- assign prodColorTitle = prodTag | replace: "pantyColor-", "" | replace: "_", " " -%}
          {% endif %}
          {% if prodTag contains "newCustomBoxPrice-" %}
          {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
          {% endif %}
          {% endfor %}
          {% elsif product.type == "Premium Bralette" %}
          {%- assign prodNameTitle = "bralette" -%}
          {% for prodTag in product.tags %}
          {% if prodTag contains "braletteColor-" %}
          {%- assign prodColorTitle = prodTag | replace: "braletteColor-", "" | replace: "_", " " -%}
          {% endif %}
          {% if prodTag contains "newCustomBoxPrice-" %}
          {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
          {% endif %}
          {% endfor %}
          {% endif %}

          {% if prodNameTitle == "highwaisted_thong" %}
          {% assign prdImgFileName = "hwthong" %}
          {% else %}
          {% assign prdImgFileName = prodNameTitle %}
          {% endif %}

          {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "---missy---tile_fr.jpg" %}

          <div class="col products_col velaProBlock quickadd{% if prodNameTitle == "bralette"%} topProd{% endif %}" data-size-guid="{% render 'collection-selectors-charts', product_target: product %}">
            <div class="col-wrap velaProBlockInner">
              <div class="product-image proHImage d-flex flexJustifyCenter">
                <a class="proFeaturedImage" href="{{ product.url }}">
                  {% for image in product.images %}
                  	{%- assign itemNumber = forloop.index | modulo:5 -%}
                      {%- if itemNumber == 2 -%}
                          <img class="img-responsive lazyload" alt="{{ image.alt }}" title="{{ image.alt }}" data-src="{{ image | img_url: 'master' }}">
                      {%- endif -%}
                  {% endfor %}
<!--                   <div class="col-pro-details">
                    <h3>{{ product.title | replace: "Highwaisted Thong", "HW Thong" }}</h3>
                    <p class="price bfx-price">{{ product.price | money_without_trailing_zeros  }}</p>
                  </div> -->
                </a>
              </div>
              <div class="col-pro-details">
                <h4><a href="{{ product.url }}">{{ product.title | replace: " Cotton", "" }}</a></h4>
                <div class="priceWrapper">
                  {% if customer.tags contains 'Active Subscriber' %}
                  <p class="bfx-price">{{ product.price | money_without_trailing_zeros }}</p>
                  <p class="priceProduct vipHighlight bfx-price">{{ product.metafields.ebyacf.vip_product_price | replace: '/ ', '' }}</p>
                  {% else %}
                  <p class="bfx-price">{{ product.price | money_without_trailing_zeros }}</p>
                  <p class="priceProduct vipHighlight bfx-price">{{ product.metafields.ebyacf.vip_product_price | replace: '/ ', '' }}</p>
                  {% endif %}
                </div>
              </div>
              <div class="product-details proButton clearfix">
                <div class="quick_btn pre-btn">
                  {% include 'vela-product-quickadd' %}
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
          <div class="col products_col velaProBlock premProdCopyTile desktop-only" >
            <div class="col-wrap velaProBlockInner">
              <div class="product-image proHImage d-flex flexJustifyCenter">
                <img width="155" height="363" class="lazyload" alt="10% of every purchase empowers women out of poverty" title="10% of every purchase empowers women out of poverty" data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/premLuxeCopyTile-1.jpg" />
              </div>
              <div class="product-details proButton clearfix">
                
              </div>
            </div>
          </div>
          <div class="col products_col velaProBlock premProdCopyTile mobile-only" style="flex:1;max-width: 100%;">
            <div class="col-wrap velaProBlockInner">
              <div class="product-image proHImage d-flex flexJustifyCenter">
              	<img width="363" height="155" class="lazyload" alt="10% of every purchase empowers women out of poverty" title="10% of every purchase empowers women out of poverty" data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/TILE-2-alt---flocking-alt2.jpg" />
              </div>
              <div class="product-details proButton clearfix">
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
