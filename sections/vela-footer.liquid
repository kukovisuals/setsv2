<footer id="velaFooter" class="style1 ">
  <section class="foot_section">
    <div class="rowFlex rowFlexMargin">
      <div class="col-md-8">
        <div class="menu_section">
          <div class="menu_col1">
            <p class="header">Products</p>
            <ul class="prod_menu">
                {% for link in linklists.footer-menu-products.links %}
              <li><a href= "{{ link.url }}"><span>{{ link.title }}</span></a></li>
                {% endfor %}
            </ul>
          </div>
          <div class="menu_col2">
            <div class="accountFooterWrapper">
                <p class="header">Account</p>
                <ul class="account_menu">
                    {% if customer %}
                  		<li><a href= "/account"><span>My Account</span></a></li>
                  		<li><a href= "/account/logout"><span>Sign Out</span></a></li>
                        <!-- <li><a href="#" data-lion-refer>Give $10, Get $10</a></li> -->
                  		<li><a href= "/pages/power-points-and-rewards-program"><span>EBY Power Points</span></a></li>
                  	{% else %}
                      {% for link in linklists.footer-menu-account.links %}
                      <li><a href= "{{ link.url }}"><span>{{ link.title }}</span></a></li>
                      {% endfor %}
                  	{% endif %}
                </ul>
              	<br>
            </div>
            <p class="header">Community</p>
            <ul class="comm_menu">
                {% for link in linklists.footer-menu-community.links %}
              <li><a target="_blank" rel="noreferrer" href= "{{ link.url }}"><span>{{ link.title }}</span></a></li>
                {% endfor %}
            </ul>
          </div>
          <div class="menu_col3">
            <p class="header">About Us</p>
            <ul class="about_menu">
                {% for link in linklists.footer-menu-aboutus.links %}
              <li><a href= "{{ link.url }}"><span>{{ link.title }}</span></a></li>
                {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="cont_section">
          <div class="cont_inner">
            <p class="header">We're here to help</p>
<!--              <p>Support staff available by phone or text at: <a class="c_link" href="tel:888.848.1454"><b>888.848.1454</b></a><br>
              Monday - Friday, 9am - 5pm, EST</p> -->
            <p>Support staff available via chat<br>
              Monday - Friday, 9am - 5pm, EST</p>
<!--             <p>Closed 11/24</p> -->
            <div class="link_section">
              <a class="c_link" href="/pages/faq#contact-us">Contact</a>
              <a class="c_link" href="/pages/faq">FAQ</a>
              <a class="c_link" href="https://returns.join-eby.com">Returns</a>
            </div>
          </div>
        </div>
        <article class="newsletterWrapper">
          <div class="newsletterInnerWrapper">
            <form class="ebyNewsletterForm" id="join-the-movement">
              <input type="hidden" name="g" value="Yand5m">
              <input type="hidden" name="$fields" value="$consent">
              <input type="hidden" name="$list_fields" value="$consent">

              <div class="eby-formRow">
                <div class="eby-input-field">
                  <input id="k_jtm_id_email" type="email" placeholder="Email" class="validate newsletterEmailField">
                  <button type="submit" aria-label="Sign up and get the latest" class="newsletterEmailSubmitBtn">&nbsp;</button>
                </div>
                <span class="helper-text" data-error="wrong" data-success="right">Sign up for news and exclusive deals like matching sets!</span>
              </div>
            </form>
          </div>
        </article>
      </div>
    </div>
  </section>
  <div class="footerCopyRight ">
        <div class="container-full">
            <div class="footerCopyRightInner">
                <div class="rowFlex rowFlexMargin flexAlignCenter">
                    <div class="col-xs-12 col-sm-12 col-md-4">
                        {%- if section.settings.copyright_enable and section.settings.footer_copyright != blank -%}
                            <div class="velaCopyRight">
                                &copy;{{'now' | date: '%Y' }} {{ section.settings.footer_copyright }}
                                <span style="display:block;font-size:10px;line-height:normal;">
                                  2578 Broadway #573
                                  <br>
                                  New York, NY 10025-8844
                                </span>
                            </div>
                        {%- endif -%}
                    </div>
                    {% if section.settings.social_enable %}
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            {%- assign socialFacebook = section.settings.social_facebook -%}
                            {%- assign socialTwitter = section.settings.social_twitter -%}
                            {%- assign socialInstagram = section.settings.social_instagram -%}
                            {%- assign socialPinterest = section.settings.social_pinterest -%}
                            {%- assign socialYoutube = section.settings.social_youtube -%}
                            <div class="velaSocialFooter">
                                {% if section.settings.social_title != blank %}
                                    <h6 class="velaFooterTitle">{{ section.settings.social_title }}</h6>
                                {% endif %}
                                <div class="velaContent">        
                                    <ul class="velaListSocial list-unstyled list-inline">
                                        {%- if socialFacebook != blank -%}
                                            <li class="facebook">
                                                <a target="_blank" rel="noreferrer" href="{{ socialFacebook }}" title="{{ shop.name }} on Facebook" class="btn-social btn-social--facebook" data-original-title="Facebook">
                                                    <i class="fa fa-facebook"></i>
                                                </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if socialTwitter != blank -%}
                                            <li class="twitter">
                                                <a target="_blank" rel="noreferrer" href="{{ socialTwitter }}" title="{{ shop.name }} on Twitter" class="btn-social btn-social--twitter" data-original-title="Twitter">
                                                    <i class="fa fa-twitter"></i>
                                                </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if socialInstagram != blank -%}
                                            <li class="instagram">
                                                <a target="_blank" rel="noreferrer" href="{{ socialInstagram }}" title="{{ shop.name }} on Instagram" class="btn-social btn-social--instagram" data-original-title="Instagram">
                                                    <i class="fa fa-instagram"></i>
                                                </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if socialPinterest != blank -%}
                                            <li class="pinterest">
                                                <a target="_blank" rel="noreferrer" href="{{ socialPinterest }}" title="{{ shop.name }} on Pinterest" class="btn-social btn-social--pinterest" data-original-title="Pinterest">
                                                    <i class="fa fa-pinterest"></i>
                                                </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if socialYoutube != blank -%}
                                            <li class="youtube">
                                                <a target="_blank" rel="noreferrer" href="{{ socialYoutube }}" title="{{ shop.name }} on Youtube" class="btn-social btn-social--youtube" data-original-title="Youtube">
                                                    <i class="fa fa-youtube"></i>
                                                </a>
                                            </li>
                                        {%- endif -%}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {%- if section.settings.footer_menu_enable3 -%}
                        <div class="col-xs-12 col-sm-12 col-md-4 termsFooter">
                            <div class="velaCopyRightLink">
                                {%- assign menuTitle = "" -%}
                                {%- assign menuHandle = section.settings.footer_menu_menu3 -%}
                                <ul class="list-inline list-unstyled">
                                    {% for velaLink in linklists[menuHandle].links %}
                                        <li class="{% if velaLink.active %}active{% endif %}">
                                          <a href="{{ velaLink.url }}" title="" style="min-width:100px;display: block;"><span>{{ velaLink.title }}</span></a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>
</footer>
