        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "header",
        "content": "Our Choice of Undies"
      },
      {
        "type": "text",
        "id": "our_join",
        "label": "Join Heading",
        "default": "Join the fiercest ladies on the planet"
      }, {
        "type": "richtext",
        "id": "richtext_join",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      }, {
        "type": "text",
        "id": "link_btn",
        "label": "Shop"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link",
        "info": "Optional"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "color",
            "id": "our_pro_bg",
            "label": "Block Background",
            "default": "#f2cfbf"
          },
          {
            "type": "color",
            "id": "our_pro_txt",
            "label": "Block Text Color",
            "default": "#000000"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Main Title"
          }, {
            "type": "richtext",
            "id": "richtext",
            "label": "Text",
            "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
          }, {
            "type": "text",
            "id": "link_btn",
            "label": "Shop"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Our Product Block",
        "category": "Our Product",
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}