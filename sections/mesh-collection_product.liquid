<style>
  .text-sectiontlt23 {
    font-size: 16px;
    line-height: 1.75;
    font-weight: bold;
    margin: 0;
    text-align: center;
  }
  .text-sectiontxt23 {
    font-size: 16px;
    width: 72%;
    margin: 0 auto;
    text-align: center;
    line-height: 1.75;
  }
  .permium_hero_section {
    margin-top: 40px;
    margin-bottom: 88px;
  }

  @media(min-width: 1024px) {
    .text-sectiontlt23 {
      font-size: 24px;
      line-height: 2;
    }
    .text-sectiontxt23 {
      font-size: 24px;
      width: 100%;
      line-height: 2;
    }
  }
</style>

{%- unless proImageSize -%}
  {%- assign proImageSize = '800x' -%}
{%- endunless -%}

<!--fc 112322-->
<section class="premium_product_section same__cols">
  <div class="section-wrap">
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}
        <div class="collection_group" id="{% if block.settings.collection contains "port" %}port-assortment{% else %}parisiansummer-assortment{% endif %}">
        <div class="collection_group_head">
          <h4 class="text-sectiontlt23">We're taking sheer to the next level</h4>
          <p class="text-sectiontxt23">Astonishing comfort spiced with an extra "OMG, so sexy" bite</p>
        </div>

        <!--technology section -->
        <section class="permium_hero_section">
          <div class="section-wrap">
            <div class="section_image mobile_image">
              <img data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/sheer4-echnology-mbl.jpg?v=1669224927" class="mobile_image lazyload" width="375" height="478" alt="">
            </div>
            <div class="section_image ipad_image">
              <img data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/sheer4-echnology-mbl.jpg?v=1669224927" class="ipad_image lazyload" width="762" height="762" alt="">
            </div>
            <div class="section_image desktop_image">
              <img data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/sheer4-technology-dsk.jpg?v=1669224927" class="desktop_image lazyload" width="1680" height="1680" alt="">
            </div>
          </div>
        </section>

        <!--Reptile stripe  -->

        <div class="collection_group_list">

          {% for product in collection.products limit: 3 %}
            {% if product.type == "Premium Underwear" %}
              {% for prodTag in product.tags %}
                {% if prodTag contains "pantyType-" %}
                  {%- assign prodNameTitle = prodTag | replace: "pantyType-", "" -%}
                {% endif %}
                {% if prodTag contains "pantyColor-" %}
                  {%- assign prodColorTitle = prodTag | replace: "pantyColor-", "" | replace: "_", " " -%}
                {% endif %}
                {% if prodTag contains "newCustomBoxPrice-" %}
                  {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
                {% endif %}
              {% endfor %}
            {% elsif product.type == "Premium Bralette" %}
              {%- assign prodNameTitle = "bralette" -%}
              {% for prodTag in product.tags %}
                {% if prodTag contains "braletteColor-" %}
                  {%- assign prodColorTitle = prodTag | replace: "braletteColor-", "" | replace: "_", " " -%}
                {% endif %}
                {% if prodTag contains "newCustomBoxPrice-" %}
                  {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
                {% endif %}
              {% endfor %}
            {% endif %}

            {% if prodNameTitle == "highwaisted_thong" %}
              {% assign prdImgFileName = "hwthong" %}
            {% else %}
              {% assign prdImgFileName = prodNameTitle %}
            {% endif %}

            {% if prodColorTitle == "port" %}
              {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "---missy---model_fr.jpg" %}
            {% else if prodColorTitle == "parisian summer" %}
              {% if prdImgFileName contains "bra" %}
                {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: "thong_set---missy---model_fr.jpg" %}
              {% else %}
                {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "_set---missy---model_fr.jpg" %}
              {% endif %}
            {% else %}
              {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "---missy---tile_fr.jpg" %}
            {% endif %}

            <div class="col velaProBlock quickadd" data-size-guid="{% render 'collection-selectors-charts', product_target: product %}">
              <div class="col-wrap velaProBlockInner">
                <div class="product-image proHImage d-flex flexJustifyCenter">
                  <a class="proFeaturedImage" href="{{ product.url }}">
                    {% for image in product.images %}
                      {%- assign itemNumber = forloop.index -%}
                      {%- if itemNumber == 1 -%}
                        <img class="img-responsive lazyload" alt="{{ image.alt }}" title="{{ image.alt }}" data-src="{{ image | img_url: 'master' }}">
                      {%- endif -%}
                    {% endfor %}
                    <div class="col-pro-details">
                      <h3>{{ product.title | replace: "Highwaisted", "High Cut Highwaisted" | replace: "Mesh ", "" }}</h3>
                      <p class="price bfx-price">{{ product.price | money_without_trailing_zeros  }}</p>
                    </div>
                  </a>
                </div>
                <div class="product-details proButton clearfix">
                  <div class="quick_btn">
                    {% comment %}
                      <a href="">QUICK ADD +</a>
                    {% endcomment %}
                    {% include 'vela-product-quickadd' %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
          <!-- Static gallery   -->
          <section class="permium_hero_section">
            <div class="section-wrap">
              <div class="section_image mobile_image">
                <img src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/sheer4-gallery-image-mbl.jpg?v=1669225559" class="mobile_image lazyloadPload" width="375" height="478" alt="">
              </div>
              <div class="section_image desktop_image">
                <img src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/sheer4-gallery-image-dsk.jpg?v=1669225559" class="desktop_image lazyloadPload" width="1680" height="993" alt="">
              </div>
            </div>
          </section>
          {% for product in collection.products limit: block.settings.pdp_range %}

            {% if product.type == "Premium Underwear" %}
              {% for prodTag in product.tags %}
                {% if prodTag contains "pantyType-" %}
                  {%- assign prodNameTitle = prodTag | replace: "pantyType-", "" -%}
                {% endif %}
                {% if prodTag contains "pantyColor-" %}
                  {%- assign prodColorTitle = prodTag | replace: "pantyColor-", "" | replace: "_", " " -%}
                {% endif %}
                {% if prodTag contains "newCustomBoxPrice-" %}
                  {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
                {% endif %}
              {% endfor %}
            {% elsif product.type == "Premium Bralette" %}
              {%- assign prodNameTitle = "bralette" -%}
              {% for prodTag in product.tags %}
                {% if prodTag contains "braletteColor-" %}
                  {%- assign prodColorTitle = prodTag | replace: "braletteColor-", "" | replace: "_", " " -%}
                {% endif %}
                {% if prodTag contains "newCustomBoxPrice-" %}
                  {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
                {% endif %}
              {% endfor %}
            {% endif %}

            {% if prodNameTitle == "highwaisted_thong" %}
              {% assign prdImgFileName = "hwthong" %}
            {% else %}
              {% assign prdImgFileName = prodNameTitle %}
            {% endif %}

            {% if prodColorTitle == "port" %}
              {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "---missy---model_fr.jpg" %}
            {% else if prodColorTitle == "parisian summer" %}
              {% if prdImgFileName contains "bra" %}
                {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: "thong_set---missy---model_fr.jpg" %}
              {% else %}
                {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "_set---missy---model_fr.jpg" %}
              {% endif %}
            {% else %}
              {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "---missy---tile_fr.jpg" %}
            {% endif %}

            <div class="col velaProBlock quickadd" data-size-guid="{% render 'collection-selectors-charts', product_target: product %}">
              <div class="col-wrap velaProBlockInner">
                <div class="product-image proHImage d-flex flexJustifyCenter">
                  <a class="proFeaturedImage" href="{{ product.url }}">
                    {% for image in product.images %}
                      {%- assign itemNumber = forloop.index | modulo:5 -%}
                      {%- if itemNumber == 2 -%}
                        <img class="img-responsive lazyload" alt="{{ image.alt }}" title="{{ image.alt }}" data-src="{{ image | img_url: 'master' }}">
                      {%- endif -%}
                    {% endfor %}
                    <div class="col-pro-details">
                      <h3>{{ product.title | replace: "Highwaisted", "High Cut Highwaisted" | replace: "Mesh ", "" }}</h3>
                      <p class="price bfx-price">{{ product.price | money_without_trailing_zeros  }}</p>
                    </div>
                  </a>
                </div>
                <div class="product-details proButton clearfix">
                  <div class="quick_btn">
                    {% comment %}
                      <a href="">QUICK ADD +</a>
                    {% endcomment %}
                    {% include 'vela-product-quickadd' %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Collection",
    "settings": [],
    "blocks": [
      {
        "type": "tab",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          },
          {
            "type": "text",
            "id": "sub_title",
            "label": "Sub Title"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Caption"
          }, {
            "type": "range",
            "id": "pdp_range",
            "min": 2,
            "max": 50,
            "step": 1,
            "label": "Show Product",
            "default": 8
          }
        ]
      }
    ]
  }
{% endschema %}