<div class="our-product-inner">
  {%- if page.metafields.ourproducttitle.our_product_title != blank -%}
    <div class="our-product-title-wrapper">
      <h1 class="our-product-title pageTop">{{ page.metafields.ourproducttitle.our_product_title }}</h1>
    </div>
  {%- endif -%}
  {% if page.metafields.ourproductimage.our_product_image != blank %}

    <span class="our-product-title-description">9 Reasons Why Women Are Switching To EBY</span>
    <div class="top-banner">
      <img
        class="lazyload desk_img"
        height="208"
        width="347"
        data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/LP_-_1440_-_our-product_-_hero.jpg?v=1680111702"
        alt="Our Product"
        title="Our Product" />
      <img
        class="lazyload tablet_img"
        height="208"
        width="347"
        data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/LP_-_768_-_our-product_-_hero.jpg?v=1680111702"
        alt="Our Product"
        title="Our Product" />
      <img
        class="lazyload mob_img"
        height="208"
        width="347"
        data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/LP_-_376_-_our-product_-_hero.jpg?v=1680111702"
        alt="Our Product"
        title="Our Product" />
    </div>
  {% endif %}
</div>


{% schema %}
  {
    "name": "Our Product Top",
    "class": "our-product-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Our Product"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Our Choice of Undies"
      },
      {
        "type": "richtext",
        "id": "richtext",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      }, {
        "type": "text",
        "id": "our_choice_t",
        "label": "Heading",
        "default": "Our Choice of Undies"
      }, {
        "type": "text",
        "id": "link_btn",
        "label": "Shop"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link",
        "info": "Optional"
      }

    ],
    "presets": [
      {
        "name": "Our Product Top",
        "category": "Our Product"
      }
    ]
  }
{% endschema %}