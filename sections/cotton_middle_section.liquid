        {% if section.settings.fisrt_image_1 != blank %}
        <a href="{% if section.settings.first_img_url_1 != blank %}{{ section.settings.first_img_url_1 }}{% else %}#{% endif %}">
          <img width="490" height="651" data-src="{{ section.settings.fisrt_image_1 | img_url: 'original' }}" class="lazyload" alt="{{ section.settings.fisrt_image_1.alt }}" title="{{ section.settings.fisrt_image_1.alt }}">
          {% if section.settings.first_text != blank %}
          <div class="cotton_overlay_text">
            {{ section.settings.first_text }}
          </div>
          {% endif %}
        </a>
        {% endif %}
        {% if section.settings.fisrt_image_2 != blank %}
        <a href="{% if section.settings.first_img_url_2 != blank %}{{ section.settings.first_img_url_2 }}{% else %}#{% endif %}">
          <img width="490" height="651" data-src="{{ section.settings.fisrt_image_2 | img_url: 'original' }}" class="lazyload" alt="{{ section.settings.fisrt_image_2.alt }}" title="{{ section.settings.fisrt_image_2.alt }}">
        </a>
        {% endif %}
