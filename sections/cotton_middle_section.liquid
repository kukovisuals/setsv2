      <div class="cotton-left product-grd collection_group">
        <div class="products_cols collection_group_list">
          {% for i in (1..4) %}
          {% capture products %}product_{{i}}{% endcapture %}
          {% assign product = all_products[section.settings[products]] %}
          {% if section.settings[products] != blank %}
          {% if product.type == "Premium Underwear" %}
          {% for prodTag in product.tags %}
          {% if prodTag contains "pantyType-" %}
          {%- assign prodNameTitle = prodTag | replace: "pantyType-", "" -%}
          {% endif %}
          {% if prodTag contains "pantyColor-" %}
          {%- assign prodColorTitle = prodTag | replace: "pantyColor-", "" | replace: "_", " " -%}
          {% endif %}
          {% if prodTag contains "newCustomBoxPrice-" %}
          {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
          {% endif %}
          {% endfor %}
          {% elsif product.type == "Premium Bralette" %}
          {%- assign prodNameTitle = "bralette" -%}
          {% for prodTag in product.tags %}
          {% if prodTag contains "braletteColor-" %}
          {%- assign prodColorTitle = prodTag | replace: "braletteColor-", "" | replace: "_", " " -%}
          {% endif %}
          {% if prodTag contains "newCustomBoxPrice-" %}
          {%- assign prodDealPrice = prodTag | replace: "newCustomBoxPrice-", "" | replace: "_", " " -%}
          {% endif %}
          {% endfor %}
          {% endif %}

          {% if prodNameTitle == "highwaisted_thong" %}
          {% assign prdImgFileName = "hwthong" %}
          {% else %}
          {% assign prdImgFileName = prodNameTitle %}
          {% endif %}

          {% assign premImgFileName = prodColorTitle | replace: " ", "" | append: "---" | append: prdImgFileName | append: "---missy---tile_fr.jpg" %}
          <div class="col products_col velaProBlock quickadd" data-size-guid="{% render 'collection-selectors-charts', product_target: product %}">
            <div class="col-wrap velaProBlockInner">
              <div class="product-image proHImage d-flex flexJustifyCenter">
                <a class="proFeaturedImage" href="{{ product.url }}">
                  {%- if product.metafields.ebyacf.collection_page_tile_img -%}
                  {% for image in product.images %}
                  {%- if image.src contains product.metafields.ebyacf.collection_page_tile_img -%}
                  <img class="img-responsive lazyload" width="168" height="246" alt="{{ image.alt }}" title="{{ image.alt }}" data-src="{{ product.featured_image | img_url: 'master' }}">
                  {% break %}
                  {%- endif -%}
                  {% endfor %}
                  {%- else -%}
                  <img class="t1 img-responsive lazyload" width="168" height="246" alt="{{ product.featured_image.alt | escape }}" title="{{ product.featured_image.alt | escape }}" data-src="{{ product.featured_image | img_url: 'master' }}" />
                  {%- endif -%}
                  {%- if product.images.size > 1 and settings.product_second_image -%}
                  <span class="hidden-sm hidden-xs">
                    {% for image in product.images %}
                    {%- if forloop.first != true -%}
                    <img class="img-responsive lazyload" width="168" height="246" alt="{{ image.alt }}" title="{{ image.alt }}" data-src="{{ image | img_url: 'master' }}">
                    {% break %}
                    {%- endif -%}
                    {% endfor %}
                  </span>
                  {%- endif -%}
                </a>
              </div>
              <div class="col-pro-details">
                <h4><a href="{{ product.url }}">{{ product.title | replace: " Cotton", "" }}</a></h4>
                <div class="priceWrapper">
                  {% if customer.tags contains 'Active Subscriber' %}
                  <p class="bfx-price">{{ product.price | money_without_trailing_zeros }}</p>
                  <p class="priceProduct vipHighlight bfx-price">{{ product.metafields.ebyacf.vip_product_price | replace: '/ ', '' }}</p>
